{
  "name": "code-formatter",
  "displayName": "code-formatter",
  "description": "Universal code formatter for VS Code.",
  "version": "0.0.1",
  "publisher": "luyiming",
  "license": "MIT",
  "engines": {
    "vscode": "^1.17.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "keywords": [
    "format",
    "beautify",
    "prettify"
  ],
  "activationEvents": [
    "onLanguage:cpp",
    "onLanguage:yaml",
    "onLanguage:python",
    "onCommand:code-formatter.run"
  ],
  "main": "./out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.5.3",
    "vscode": "^1.1.5",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "@types/diff": "^3.2.2",
    "align-yaml": "^0.1.8",
    "diff": "^3.4.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "code-formatter.run",
        "title": "Format Document"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Code Formatter Configuration",
      "properties": {
        "c++.formatter": {
          "enum": [
            "clang-format",
            "uncrusity"
          ],
          "type": "string",
          "default": "clang-format",
          "description": "Code formatter for c++ languague",
          "scope": "resource"
        },
        "c.formatter": {
          "enum": [
            "clang-format",
            "uncrusity"
          ],
          "type": "string",
          "default": "clang-format",
          "description": "Code formatter for c++ languague"
        },
        "clang-format.style": {
          "enum": [
            "LLVM",
            "Google",
            "Chromium",
            "Mozilla",
            "WebKit",
            "file"
          ],
          "type": "string",
          "default": "LLVM",
          "description": "Use `file` to load style configuration from .clang-format file located in one of the parent directories of the source file"
        },
        "align-yaml.padding": {
          "type": "integer",
          "default": 0,
          "description": "The amount of padding to add next to each line. (Supported by align-yaml)"
        },
        "autopep8.maxline": {
          "type": "integer",
          "default": 79,
          "description": "Maximum allowed line length"
        }
      }
    }
  }
}
